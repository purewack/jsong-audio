{
	"compilerOptions": {
		"strictNullChecks": true,
		"target": "ES6",
		"module": "ESNext",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules","tests"]
}
